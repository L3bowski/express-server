{
  "development": {
    "app": {
      "name": "azure-express"
    },
    "defaultPort": 3000,
    "hostedApps": [{
      "appPath": "app1",
      "namespace": "local-app-1"
    }, {
      "appPath": "app2",
      "namespace": "local-app-2"
    }]
  },
  "production": {
    "app": {
      "name": "azure-express"
    },
    "hostedApps": [{
      "appPath": "app1",
      "namespace": "app1"
    }, {
      "appPath": "app1",
      "namespace": "my-custom-domain.sx",
      "mapToDomain": true
    }, {
      "appPath": "app2",
      "namespace": "app2"
    }]
  }
}